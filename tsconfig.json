{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["dom"],
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "outDir": "dist/cjs",
    "declaration": true,
    "declarationMap": true,
    // Skip until the following is corrected.
    // https://github.com/facebookexperimental/Recoil/issues/1902
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "examples"]
}
